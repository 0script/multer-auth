extends layout

block content
  h1.main-title= title
  form#loginform(method='post',enctype="multipart/form-data")
    .input-group
        label(for="name")
        input#name(
            placeholder="Enter your username" 
            name="name"
            )
    .input-group
        label(for="email")
        input#email(
            placeholder="Enter your mail address" 
            name="email"
            )
    .input-group
        label(for="phone")
        input#phone(
            placeholder="Enter your phone number" 
            name="phone"
            )
    .input-group
        label(for="password")
        input#password(
            placeholder="Enter your password" 
            name="password"
            type="password"
            )
        i(class="fa-solid fa-eye-slash",id="visiblepassword")
    .input-group
        label(for="password2")
        input#password2(
            placeholder="Repeat your password" 
            name="password2"
            type="password"
            )
    .input-group
        label(for="files")
            input#files(
                multiple,
                type="file",
                name="profiles"
            )
    p.small-small(id='profile-text') Select Profile Picture
    p.small 
        a(href='/login') I already have an account
    button.submit-btn(type="submit") Register

block script 
    script(src='/javascripts/register.js',type='application/javascript')